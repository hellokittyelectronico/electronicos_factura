<record id="informes_retenciones" model="ir.ui.view">
    <field name="name">informes_retenciones</field>
    <field name="model">account.tax</field>
    <field name="inherit_id" ref="account.view_tax_form"/>
    <field name="arch" type="xml">
        <field name="name" position="after">
            <field name="rte_fuente"/>
            <field name="rte_iva"/>
            <field name="rte_ica"/>
        </field>
    </field>
</record>
     
     <record model="ir.ui.view" id="calidades_report_tree">
        <field name="name">RUT - Responsabilidades, Calidades y Atributos</field>
        <field name="model">account.calidadess</field>
        <field name="arch" type="xml">
            <tree string="calidades y atributos" create="false">
                <field name='codigo'/>
                <field name='responsabilidad' />
                <field name='descripcion' />
            </tree>
        </field>
    </record>

    
    <record id="view_tabla_form" model="ir.ui.view">
        <field name="name">base_electronicos.tabla.form</field>
        <field name="model">base_electronicos.tabla</field>
        <field name="inherit_id" ref="base_electronicos.form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
            	<field name="general_factura" string="Datos Factura">
                <tree>
                    <field name="name" />
                    <field name="company_id" />
                    <field name="diario" />
                    <field name="tipo_factura" />
                </tree>
                <form>
                    <group>
                    <field name="name" />
                    <field name="company_id" />
                    <field name="diario" />
                    <field name="tipo_factura" />
                    <button name="documento" type="object" string="Cambiar el tipo a documentos" 
                			 groups="base.group_user"/>
                    
                    </group>
                </form>
             </field>   
        </field>  
        </field>
    </record>



    <record id="view_tax_mod" model="ir.ui.view" >
    <field name="name">form codigo tax</field>
    <field name="model">account.tax</field>
    <field eval="1" name="priority"/>
    <field name="inherit_id" ref="account.view_tax_form"/>
    <field name="arch" type="xml">     
           <xpath expr="//page[2]" position="after">
              <page string="Tipo impuesto">
                  <group>
                  <field name="tipo_impuesto"/>
                  </group>  
              </page>
           </xpath>
         </field>      
    </record>


    <record id="account_invoice_refund_inheretic" model="ir.ui.view">
        <field name="name">account_invoice_refund_fe</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <field name="nota_credito" string="Tipo de Nota"  required='True'/>
            </xpath>
            <!-- <xpath expr="//field[@name='journal_id']" position="replace">
                 <field name="journal_id" style="display:none;"/>
            </xpath> -->
        </field>
    </record>
   
  </data>
</odoo>