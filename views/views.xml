                                	<field name="tipo_pago"/>
                                	<field name="methodo_pago"/>
                                	<field name="tipo_factura"/>
                                </group>
                                <!-- <group string="Detalles de Pago" attrs="{'invisible':[ ('estado_factura','=','factura_correcta')]}">
                                    <field name="nota_debito" />
